@model IEnumerable<Product>

<head>
    <title>Product Information</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>

    <h2>Product Information</h2>

<table>
    <tr>
        <th>Product Name</th>
        <th>Catalog ID</th>
        <th>Unit Price</th>
        <th>Unit In Stock</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ProductName</td>
            <td>@product.CatalogId</td>
            <td>@product.UnitPrice.ToString("C")</td>
            <td>@product.UnitInStock</td>
            <td>
                @* <a href="/Product/Delete/@product.Id" class="btn-danger btn">Delete</a> *@
                @* <a href="/Product/Edit/@product.Id" class="btn-warning btn">Edit</a> *@
                <a  asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn-danger btn">Delete</a>
                <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" class="btn-warning btn">Edit</a>
            </td>
        </tr>
    }
        
</table>
<a asp-action="Add" asp-controller="Product">Add Product</a>
@* <a href="/Product/AddProduct">Add Product</a> *@
@* <button class="add-button" onclick="location.href='@Url.Action("Add", "Product")'">Add Product</button> *@
</body>


